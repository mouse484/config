{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":timezone(Asia/Tokyo)",
    "helpers:pinGitHubActionDigestsToSemver"
  ],
  "labels": [
    "dependencies",
    "renovate"
  ],
  "rangeStrategy": "bump",
  "automerge": true,
  "major": {
    "automerge": false
  },
  "minimumReleaseAge": "7 days",
  "prCreation": "immediate",
  "internalChecksFilter": "flexible"
}
